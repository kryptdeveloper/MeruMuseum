<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.art.merumuseum.Finance.Fmodels.ApproveModel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/transctid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transact-id:cgh ckfkbgcgyu"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center_vertical"


            />
        <TextView
            android:id="@+id/fcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mpesa code:cgh ckfkbgcgyu"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center_vertical"


            />
        <TextView
            android:id="@+id/faemail"
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:cgh ckfkbg kcgyu"
            android:textSize="28dp"
            android:gravity="center_vertical"


            />
        <TextView
            android:id="@+id/faamount"
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:6787kes"
            android:textSize="28dp"
            android:gravity="center_vertical"


            />
        <TextView
            android:id="@+id/faadate"
            android:layout_marginTop="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:77/55/6798"
            android:textSize="28dp"
            android:gravity="center_vertical"


            />
       <Button
           android:background="@color/colorPrimary"
           android:id="@+id/faapprovebtn"
           android:layout_margin="21dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Approve"

           />
        <Button
            android:background="@color/colorPrimaryDark"
            android:id="@+id/faareject"
            android:layout_margin="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject"

            />
        <EditText
            android:hint="reasons for rejection"
            android:visibility="gone"
            android:id="@+id/rejectdetid"
            android:background="@drawable/edittext"
            android:layout_width="300dp"
            android:layout_height="100dp"

            />
        <Button
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/subRejectid"
            android:layout_margin="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"

            />



    </LinearLayout>

</RelativeLayout>