<?xml version="1.0" encoding="UTF-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="21dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ggemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Email:jj@gmail.com"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ggamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Amount:300 kes"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ggdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Date:gg/2/299"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ggstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Payment Approved"
            android:textSize="21sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ggapprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Complete"
            android:textSize="21sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>