<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp">

  <TextView
      android:id="@+id/txtFeedback"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Feedback"
      android:textColor="@color/colorPrimary"
      android:textSize="21dp"
      android:gravity="center_horizontal"
      android:layout_marginTop="21dp"


      />

    <TextView
        android:textSize="21dp"
        android:layout_marginTop="88dp"
        android:layout_marginStart="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"

        android:text="To"
        android:id="@+id/txtTo"


        />
  <Spinner
      android:layout_marginTop="45dp"
      android:layout_below="@+id/txtFeedback"
      android:layout_toRightOf="@id/txtTo"


      android:background="@color/colorPrimaryDark"
      android:textAlignment="center"

      android:id="@+id/cuser"


      android:layout_width="200dp"
      android:layout_height="45dp"


      />
<EditText
    android:id="@+id/fedContent"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@color/colorPrimary"
    android:layout_below="@id/cuser"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="21dp"
    android:hint="Enter Feedback"
    android:gravity="center"


  />
  <Button
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_margin="21dp"
      android:background="@color/colorPrimaryDark"
      android:id="@+id/submitFedbtn"
      android:text="Submit"
      android:layout_below="@id/fedContent"

    />

</RelativeLayout>